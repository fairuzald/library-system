  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [""]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-save tokens from login response",
          "if (pm.response.code === 200 && pm.request.url.toString().includes('/api/auth/login')) {",
          "    const responseJson = pm.response.json();",
          "    if (responseJson.data && responseJson.data.access_token) {",
          "        pm.environment.set('accessToken', responseJson.data.access_token);",
          "    }",
          "    if (responseJson.data && responseJson.data.refresh_token) {",
          "        pm.environment.set('refreshToken', responseJson.data.refresh_token);",
          "    }",
          "    if (responseJson.data && responseJson.data.user && responseJson.data.user.id) {",
          "        pm.environment.set('userId', responseJson.data.user.id);",
          "    }",
          "}",
          "",
          "// Auto-save tokens from refresh response",
          "if (pm.response.code === 200 && pm.request.url.toString().includes('/api/auth/refresh')) {",
          "    const responseJson = pm.response.json();",
          "    if (responseJson.data && responseJson.data.access_token) {",
          "        pm.environment.set('accessToken', responseJson.data.access_token);",
          "    }",
          "    if (responseJson.data && responseJson.data.refresh_token) {",
          "        pm.environment.set('refreshToken', responseJson.data.refresh_token);",
          "    }",
          "}",
          ""
        ]
      }
    }
  ],
  "variable": [
