# General Configuration
APP_ENV=production
LOG_LEVEL=info
LOG_JSON=true
VERSION=latest
REGISTRY=fairuzald

# JWT Configuration
JWT_SECRET=your-secure-jwt-secret-key
JWT_EXPIRATION_HOURS=24
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=168h

# Rate Limiting
RATE_LIMIT_IP=10
RATE_LIMIT_IP_BURST=20
RATE_LIMIT_GLOBAL=100
RATE_LIMIT_GLOBAL_BURST=200

# API Gateway Configuration
API_GATEWAY_NAME=api-gateway
API_GATEWAY_SERVER_PORT=8000
API_GATEWAY_PORT=8000
API_GATEWAY_REPLICAS=1
API_GATEWAY_CPU_LIMIT=0.5
API_GATEWAY_MEM_LIMIT=512M

# Book Service Configuration
BOOK_SERVICE_NAME=book-service
BOOK_SERVICE_HOST=book-service
BOOK_SERVICE_HTTP_PORT=8080
BOOK_SERVICE_GRPC_PORT=50051
BOOK_HTTP_EXPOSE_PORT=8080
BOOK_GRPC_EXPOSE_PORT=50051
BOOK_SERVICE_REPLICAS=1
BOOK_SERVICE_CPU_LIMIT=0.5
BOOK_SERVICE_MEM_LIMIT=512M

# Category Service Configuration
CATEGORY_SERVICE_NAME=category-service
CATEGORY_SERVICE_HOST=category-service
CATEGORY_SERVICE_HTTP_PORT=8081
CATEGORY_SERVICE_GRPC_PORT=50052
CATEGORY_HTTP_EXPOSE_PORT=8081
CATEGORY_GRPC_EXPOSE_PORT=50052
CATEGORY_SERVICE_REPLICAS=1
CATEGORY_SERVICE_CPU_LIMIT=0.5
CATEGORY_SERVICE_MEM_LIMIT=512M

# User Service Configuration
USER_SERVICE_NAME=user-service
USER_SERVICE_HOST=user-service
USER_SERVICE_HTTP_PORT=8082
USER_SERVICE_GRPC_PORT=50053
USER_HTTP_EXPOSE_PORT=8082
USER_GRPC_EXPOSE_PORT=50053
USER_SERVICE_REPLICAS=1
USER_SERVICE_CPU_LIMIT=0.5
USER_SERVICE_MEM_LIMIT=512M

# Database Configuration - Book Service
BOOK_DB_HOST=book-db
BOOK_DB_PORT=5432
BOOK_DB_NAME=book_db
BOOK_DB_USER=book_user
BOOK_DB_PASSWORD=book_password
BOOK_DB_EXPOSE_PORT=5432

# Database Configuration - Category Service
CATEGORY_DB_HOST=category-db
CATEGORY_DB_PORT=5432
CATEGORY_DB_NAME=category_db
CATEGORY_DB_USER=category_user
CATEGORY_DB_PASSWORD=category_password
CATEGORY_DB_EXPOSE_PORT=5433

# Database Configuration - User Service
USER_DB_HOST=user-db
USER_DB_PORT=5432
USER_DB_NAME=user_db
USER_DB_USER=user_service
USER_DB_PASSWORD=user_password
USER_DB_EXPOSE_PORT=5437

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_EXPOSE_PORT=6379

# Database General
DB_SSLMODE=disable
DB_CPU_LIMIT=0.5
DB_MEM_LIMIT=512M

# Volume Configuration
VOLUME_DRIVER=local
